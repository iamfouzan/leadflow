# ===============================================
# Production Environment Configuration
# ===============================================
# Copy this file to .env.production and fill in your values
# IMPORTANT: Never commit .env.production to version control!

# ===============================================
# APPLICATION SETTINGS
# ===============================================
ENVIRONMENT=production
DEBUG=false
APP_NAME="Service Marketplace API"
API_V1_PREFIX=/api/v1

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# PostgreSQL Connection (running on localhost via PM2 deployment)
POSTGRES_USER=leadflow
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=service_marketplace
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full Database URL
DATABASE_URL=postgresql://leadflow:CHANGE_ME_STRONG_PASSWORD_HERE@localhost:5432/service_marketplace

# Database Connection Pool
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ===============================================
# REDIS CONFIGURATION
# ===============================================
# Redis (running on localhost via PM2 deployment)
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@localhost:6379/0
REDIS_OTP_DB=1

# ===============================================
# JWT AUTHENTICATION
# ===============================================
# CRITICAL: Generate a strong secret key for production
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===============================================
# OTP CONFIGURATION
# ===============================================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# ===============================================
# EMAIL CONFIGURATION (SMTP)
# ===============================================
# Example: Gmail, SendGrid, AWS SES, Mailgun, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=LeadFlow

# ===============================================
# CORS CONFIGURATION
# ===============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# ===============================================
# FILE UPLOAD CONFIGURATION
# ===============================================
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# ===============================================
# AWS CONFIGURATION (If using S3 for file storage)
# ===============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# ===============================================
# MONITORING & LOGGING
# ===============================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# ===============================================
# RATE LIMITING
# ===============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===============================================
# BACKUP CONFIGURATION
# ===============================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
